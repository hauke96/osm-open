{
  "name": "osm-open",
  "version": "1.2.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --host=0.0.0.0",
    "start:prod": "ng serve --configuration production",
    "build:prod": "ng build --configuration production --base-href \"/osm-open/\"",
    "build:stage": "ng build --configuration production --base-href \"/osm-open-stage/\"",
    "watch": "ng build --watch --configuration development",
    "test": "jest --detectOpenHandles",
    "test:coverage": "jest --coverage",
    "format:check": "prettier --check \"src/{environment,app,assets}/**/*{.js,.ts,.html,.scss,.css,.json}\" && ng lint",
    "format:fix": "prettier --write \"src/{environment,app,assets}/**/*{.js,.ts,.html,.scss,.css,.json}\" && ng lint --fix",
    "update": "npx npm-check-updates -u && npm install",
    "generate-sbom": "npx @cyclonedx/cyclonedx-npm --package-lock-only --output-file sbom.json --spec-version 1.6 --output-format json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.15",
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-browser-dynamic": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "bootstrap-icons": "^1.11.3",
    "ol": "^10.3.1",
    "opening_hours": "^3.8.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.8.1",
    "zone.js": "^0.15.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^19.8.1",
    "@angular-eslint/eslint-plugin": "^19.8.1",
    "@angular-eslint/eslint-plugin-template": "^19.8.1",
    "@angular-eslint/schematics": "^19.8.1",
    "@angular-eslint/template-parser": "^19.8.1",
    "@angular/build": "^20.3.12",
    "@angular/cli": "^20.3.12",
    "@angular/compiler-cli": "^20.3.15",
    "@cyclonedx/cyclonedx-npm": "^4.1.1",
    "@types/jasmine": "^5.1.5",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-preset-angular": "^15.0.3",
    "ng-mocks": "^14.14.0",
    "prettier": "^3.7.3",
    "typescript": "^5.8.3"
  }
}
